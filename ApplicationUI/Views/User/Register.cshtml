@model UserRegisterModel

<div class="row justify-content-center">
    <div class="col-md-6 col-sm-12">
        <div class="bg-white p-4 rounded shadow-sm">
            <h1 class="text-center mb-4">Register</h1>
            <form action="Register" method="post">
                <div asp-validation-summary="All" class="text-danger px-5"></div>

                <div class="mb-3 px-5">
                    <label asp-for="UserName" class="form-label">Username</label>
                    <input asp-for="UserName" class="form-control pl-3 pr-3" placeholder="UserName">
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="mb-3 px-5">
                    <label asp-for="Name" class="form-label">Full Name</label>
                    <input asp-for="Name" class="form-control pl-3 pr-3" placeholder="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3 px-5">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control pl-3 pr-3" placeholder="Email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3 px-5">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input asp-for="Password" class="form-control pl-3 pr-3" placeholder="Password" type="password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="mb-3 px-5">
                    <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                    <input asp-for="ConfirmPassword" class="form-control pl-3 pr-3" placeholder="Password" type="password">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="text-center py-3">
                    <button type="submit" class="btn btn-primary btn-block">Register</button>
                </div>

            </form>
        </div>
    </div>
</div>
